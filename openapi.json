        "description": "List properties for the current user.",
        "parameters": [
          {
            "name": "year",
            "in": "query",
            "description": "Filter results by booking year.",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Property list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Property"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create property",
        "description": "Create a new property for the current user.",
